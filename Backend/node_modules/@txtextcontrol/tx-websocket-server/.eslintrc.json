{
   "env": {
      "browser": true,
      "es6": true,
      "node": true,
      "mocha": true
   },
   "extends": "eslint:recommended",
   "parserOptions": {
      "ecmaVersion": 2015,
      "sourceType": "module"
   },
   "rules": {
      "no-console": "off",
      "no-unused-vars": "off",
      "indent": [
         "warn",
         3,
         { "SwitchCase": 1 }
      ],
      "linebreak-style": [
         "warn",
         "windows"
      ],
      "quotes": [
         "warn",
         "single"
      ],
      "semi": [
         "error",
         "always"
      ]
   }
}